        // C# tarafƒ±ndan gelen base64 audio stream'i oynat
        function playBase64Audio(base64Data, format) {
            try {
                console.log('[playBase64Audio] Audio stream alƒ±ndƒ±, boyut:', base64Data.length);
                
                // √áoklu stream √∂nleme - debounce kontrol√º
                const MIN_AUDIO_INTERVAL = 100; // 100ms
                if (Date.now() - lastAudioTime < MIN_AUDIO_INTERVAL) {
                    console.log('[playBase64Audio] √áok hƒ±zlƒ± audio isteƒüi, atlanƒ±yor');
                    return;
                }
                
                // Mevcut audio oynatƒ±lƒ±yorsa √∂nce durdur
                if (isPlayingAudio && currentAudio) {
                    console.log('[playBase64Audio] Mevcut audio durduruluyor, yeni audio ba≈ülatƒ±lƒ±yor');
                    
                    // Mevcut sesi durdur
                    currentAudio.pause();
                    currentAudio.currentTime = 0;
                    currentAudio = null;
                    isPlayingAudio = false;
                    
                    // URL temizliƒüi
                    if (currentAudioUrl) {
                        try {
                            URL.revokeObjectURL(currentAudioUrl);
                        } catch (e) {
                            console.warn('[playBase64Audio] URL temizleme hatasƒ±:', e);
                        }
                        currentAudioUrl = null;
                    }
                    
                    // TTS kontrollerini gizle
                    hideTTSControls();
                }
                
                lastAudioTime = Date.now();
                appendFeedback('[Edge TTS] C# tarafƒ±ndan ses verisi alƒ±ndƒ±');
                
                // Base64'√º binary'ye √ßevir
                const binaryString = atob(base64Data);
                const bytes = new Uint8Array(binaryString.length);
                for (let i = 0; i < binaryString.length; i++) {
                    bytes[i] = binaryString.charCodeAt(i);
                }
                
                // Blob olu≈ütur
                let blob;
                let audioUrl;
                
                try {
                    blob = new Blob([bytes], { type: `audio/${format}` });
                    
                    // Blob boyutunu kontrol et
                    if (blob.size === 0) {
                        console.error('[playBase64Audio] Bo≈ü blob olu≈üturuldu');
                        throw new Error('Bo≈ü blob');
                    }
                    
                    // WebView2 i√ßin √∂zel blob URL olu≈üturma
                    try {
                        audioUrl = URL.createObjectURL(blob);
                    } catch (urlError) {
                        console.error('[playBase64Audio] URL.createObjectURL hatasƒ±:', urlError);
                        // Alternative approach for WebView2
                        audioUrl = null;
                    }
                    
                    // Blob URL null kontrol√º - daha g√ºvenli kontrol
                    if (!audioUrl || typeof audioUrl !== 'string' || audioUrl.includes('null') || audioUrl === 'blob:null' || !audioUrl.startsWith('blob:')) {
                        console.error('[playBase64Audio] Ge√ßersiz blob URL:', audioUrl);
                        throw new Error('Ge√ßersiz blob URL');
                    }
                } catch (blobError) {
                    console.error('[playBase64Audio] Blob olu≈üturma hatasƒ±:', blobError);
                    appendFeedback('[ERROR] Ses dosyasƒ± olu≈üturulamadƒ± - Data URL kullanƒ±lƒ±yor');
                    
                    // Fallback: Data URL dene - WebView2'de daha g√ºvenilir
                    try {
                        const dataUrl = `data:audio/${format};base64,${base64Data}`;
                        console.log('[playBase64Audio] Data URL fallback deneniyor');
                        
                        // Data URL'i doƒürudan kullan
                        const audio = new Audio();
                        audio.volume = 1.0;
                        currentAudio = audio;
                        
                        // Event listeners ekle
                        audio.onloadeddata = () => {
                            console.log('[playBase64Audio] Data URL audio y√ºklendi');
