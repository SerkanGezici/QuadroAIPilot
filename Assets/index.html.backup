        // Edge TTS audio chunks'larƒ±nƒ± oynat
        async function playEdgeAudio(audioChunks) {
            try {
                if (audioChunks.length === 0) {
                    console.error('[playEdgeAudio] Ses chunk\'ƒ± yok');
                    return;
                }
                
                console.log('[playEdgeAudio] Audio oynatƒ±lƒ±yor, chunk sayƒ±sƒ±:', audioChunks.length);
                appendFeedback(`[AUDIO] ${audioChunks.length} audio chunk oynatƒ±lƒ±yor...`);
                
                // Blob'larƒ± birle≈ütir
                let audioBlob;
                let audioUrl;
                
                try {
                    audioBlob = new Blob(audioChunks, { type: 'audio/webm' });
                    
                    // Blob boyutunu kontrol et
                    if (audioBlob.size === 0) {
                        console.error('[playEdgeAudio] Bo≈ü audio blob olu≈üturuldu');
                        appendFeedback('[ERROR] Bo≈ü ses dosyasƒ±');
                        return;
                    }
                    
                    audioUrl = URL.createObjectURL(audioBlob);
                    
                    // URL kontrol√º
                    if (!audioUrl || typeof audioUrl !== 'string' || audioUrl.includes('null')) {
                        console.error('[playEdgeAudio] Ge√ßersiz audio URL:', audioUrl);
                        appendFeedback('[ERROR] Ge√ßersiz ses URL\'i');
                        return;
                    }
                } catch (blobError) {
                    console.error('[playEdgeAudio] Blob olu≈üturma hatasƒ±:', blobError);
                    appendFeedback('[ERROR] Ses dosyasƒ± olu≈üturulamadƒ±');
                    return;
                }
                
                // Audio element olu≈ütur ve oynat
                const audio = new Audio(audioUrl);
                audio.volume = 1.0;
                
                audio.onplay = () => {
                    console.log('[playEdgeAudio] Ses √ßalmaya ba≈üladƒ±');
                    appendFeedback('[SUCCESS] Edge TTS ses √ßalƒ±yor!');
                };
                
                audio.onended = () => {
                    console.log('[playEdgeAudio] Ses √ßalma tamamlandƒ±');
                    appendFeedback('[SUCCESS] Edge TTS tamamlandƒ±!');
                    if (audioUrl && typeof audioUrl === 'string' && !audioUrl.includes('null')) {
                        try {
                            URL.revokeObjectURL(audioUrl);
                        } catch (e) {
                            console.warn('[playEdgeAudio] URL temizleme hatasƒ±:', e);
                        }
                    }
                };
                
                audio.onerror = (e) => {
                    console.error('[playEdgeAudio] Ses √ßalma hatasƒ±:', e);
                    appendFeedback('[ERROR] Ses √ßalma hatasƒ±');
                };
                
                // Oynat
                await audio.play();
                
            } catch (e) {
                console.error('[playEdgeAudio] Hata:', e);
                appendFeedback('[ERROR] Audio oynatma hatasƒ±: ' + e.message);
            }
        }
        
