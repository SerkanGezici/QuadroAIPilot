        }

        /* Header styles */
        .ai-header {
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 0 60px; /* Space for settings button */
        }
        
        h1 {
            text-align: center;
            color: var(--primary-color);
            font-size: 20px;
            font-weight: 600;
            margin: 0;
            letter-spacing: -0.5px;
