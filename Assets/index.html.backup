                        audio.onplay = () => {
                            console.log('[EdgeTTS] Data URL audio oynatƒ±lƒ±yor');
                            appendFeedback('[SUCCESS] Edge TTS (Data URL) ses √ßalƒ±yor!');
                            isPlayingAudio = true;
                            showTTSControls();
                            updateTTSStatus('üîä Metin seslendiriliyor...');
                            
                            if (window.chrome && window.chrome.webview) {
