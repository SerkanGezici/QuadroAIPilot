<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="QuadroAIPilot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuadroAIPilot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="QuadroAI Pilot">
    
    <!-- Liquid Glass cam efekti için SystemBackdrop -->
    <!-- Backdrop ThemeManager tarafından dinamik olarak yönetilecek -->
    
    <Grid x:Name="RootGrid" Background="Transparent">
        <!-- Ana içerik katmanı -->
        <Grid x:Name="MainContentGrid" Background="Transparent">
            <!-- WebView2 -->
            <wv2:WebView2 x:Name="webView" 
                          NavigationCompleted="WebView_NavigationCompleted"
                          DefaultBackgroundColor="Transparent" />
        </Grid>
        
        
        <!-- Komut önerileri overlay'i -->
        <Border x:Name="SuggestionsOverlay"
                Visibility="Collapsed"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,100"
                MaxWidth="600"
                Padding="16">
            <StackPanel>
                <TextBlock Text="Önerilen Komutlar:"
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"
                          Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                <ItemsControl x:Name="SuggestionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Margin="0,2"
                                    HorizontalAlignment="Stretch"
                                    Click="SuggestionButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Hata geri bildirimi overlay'i -->
        <Border x:Name="ErrorFeedbackOverlay"
                Visibility="Collapsed"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="500"
                Padding="20">
            <StackPanel>
                <TextBlock x:Name="ErrorMessageText"
                          Text="Komutunuz anlaşılamadı"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Margin="0,0,0,12"
                          TextWrapping="Wrap"
                          Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                
                <TextBlock Text="Şunları deneyebilirsiniz:"
                          Margin="0,0,0,8"
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                
                <ItemsControl x:Name="ErrorSuggestionsList"
                             Margin="0,0,0,12">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="8,2"
                                      TextWrapping="Wrap"
                                      Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                                <TextBlock.Text>
                                    <Binding>
                                        <Binding.Converter>
                                            <local:BulletPointConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Spacing="12">
                    <Button x:Name="LearnCommandButton"
                           Content="Bu komutu öğret"
                           Click="LearnCommand_Click"
                           Style="{StaticResource AccentButtonStyle}"/>
                    <Button x:Name="DismissErrorButton"
                           Content="Tamam"
                           Click="DismissError_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Liquid Glass overlay katmanı (dictation indicator vb. için) -->
        <Border x:Name="GlassOverlay" 
                Visibility="Collapsed"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                Padding="20,10">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Animasyonlu ses göstergesi -->
                <Grid x:Name="VoiceIndicator" 
                      Grid.Column="0"
                      Width="24" 
                      Height="24"
                      Margin="0,0,10,0">
                    <Ellipse x:Name="OuterRing" 
                             Fill="{ThemeResource SystemAccentColor}"
                             Opacity="0.3">
                        <Ellipse.RenderTransform>
                            <ScaleTransform x:Name="OuterRingScale" 
                                            CenterX="12" 
                                            CenterY="12" 
                                            ScaleX="1" 
                                            ScaleY="1"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse x:Name="InnerDot" 
                             Width="12" 
                             Height="12"
                             Fill="{ThemeResource SystemAccentColor}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Durum metni -->
                <TextBlock x:Name="StatusText" 
                           Grid.Column="1"
                           Text="Dinleniyor..."
                           Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</Window>