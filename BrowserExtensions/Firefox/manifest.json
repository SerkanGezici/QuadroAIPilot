{
  "manifest_version": 2,
  "name": "QuadroAI Okuyucu",
  "version": "1.0.0",
  "description": "Seçili metni QuadroAI Pilot ile Türkçe okutun",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "notifications",
    "http://127.0.0.1:19741/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "QuadroAI Pilot",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "quadroai@pilot.extension",
      "strict_min_version": "78.0"
    }
  }
}