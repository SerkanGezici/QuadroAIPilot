<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="QuadroAIPilot.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuadroAIPilot.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ayarlar"
    PrimaryButtonText="Kaydet"
    SecondaryButtonText="İptal"
    DefaultButton="Primary"
    Style="{ThemeResource DefaultContentDialogStyle}">

    <ContentDialog.Resources>
        <!-- Liquid Glass stil için özel kaynaklar -->
        <Style x:Key="GlassContentDialogStyle" TargetType="ContentDialog" BasedOn="{StaticResource DefaultContentDialogStyle}">
            <Setter Property="Background" Value="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
        </Style>
    </ContentDialog.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  MaxHeight="500">
        <StackPanel Spacing="20" MinWidth="400">
            <!-- Tema seçimi -->
            <StackPanel>
                <TextBlock Text="Tema" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="ThemeComboBox" 
                          Width="300"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="🌈 Gradient Paradise" Tag="GradientParadise" IsSelected="True"/>
                    <ComboBoxItem Content="🌙 Dark Elegance" Tag="DarkElegance"/>
                    <ComboBoxItem Content="🌅 Warm Sunset" Tag="WarmSunset"/>
                    <ComboBoxItem Content="❄️ Nordic Aurora" Tag="NordicAurora"/>
                    <ComboBoxItem Content="🎆 Neon Nights" Tag="NeonNights"/>
                </ComboBox>
            </StackPanel>
            
            <!-- Performans profili -->
            <StackPanel>
                <TextBlock Text="Performans Profili" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="PerformanceComboBox" 
                          Width="300"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="Otomatik" Tag="Auto" IsSelected="True"/>
                    <ComboBoxItem Content="Yüksek" Tag="High"/>
                    <ComboBoxItem Content="Orta" Tag="Medium"/>
                    <ComboBoxItem Content="Düşük" Tag="Low"/>
                    <ComboBoxItem Content="Güç Tasarrufu" Tag="PowerSaver"/>
                </ComboBox>
                <TextBlock Text="GPU ve sistem kaynaklarına göre otomatik ayarlanır" 
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Ses Seçimi -->
            <StackPanel>
                <TextBlock Text="TTS Ses Seçimi" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="VoiceComboBox" 
                          Width="300"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="🔄 Otomatik" Tag="automatic" IsSelected="True"/>
                    <ComboBoxItem Content="🔊 Emel (Edge)" Tag="edge-emel"/>
                    <ComboBoxItem Content="🔊 Ahmet (Edge)" Tag="edge-ahmet"/>
                </ComboBox>
                <TextBlock Text="Metin seslendirme için kullanılacak ses" 
                           Style="{ThemeResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Animasyon hızı -->
            <StackPanel>
                <TextBlock Text="Animasyon Hızı" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="AnimationSpeedSlider" 
                            Grid.Column="0"
                            Minimum="0.5" 
                            Maximum="2.0" 
                            Value="1.0"
                            StepFrequency="0.1"
                            TickFrequency="0.5"
                            TickPlacement="BottomRight"/>
                    <TextBlock x:Name="AnimationSpeedText"
                               Grid.Column="1"
                               Text="1.0x"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Style="{ThemeResource BodyTextBlockStyle}"/>
                </Grid>
            </StackPanel>
            
            <!-- Görsel efektler -->
            <StackPanel>
                <TextBlock Text="Görsel Efektler" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Margin="0,0,0,12"/>
                
                <ToggleSwitch x:Name="EnableAnimationsToggle" 
                              Header="Animasyonları Etkinleştir"
                              IsOn="True"
                              Margin="0,0,0,8"/>
                
                <ToggleSwitch x:Name="EnableGlowToggle" 
                              Header="Işık Efektlerini Etkinleştir"
                              IsOn="True"
                              Margin="0,0,0,8"/>
                
                <ToggleSwitch x:Name="EnableParallaxToggle" 
                              Header="Parallax Efektlerini Etkinleştir"
                              IsOn="True"/>
            </StackPanel>

            <!-- Haber Tercihleri -->
            <Expander Header="Haber Tercihleri" 
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left">
                <StackPanel Spacing="12" Margin="0,12,0,0">
                    <TextBlock Text="İlgilendiğiniz haber kategorilerini seçin" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Kategori Checkboxları -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <CheckBox x:Name="CatGenel" Content="Genel" IsChecked="True" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                        <CheckBox x:Name="CatGundem" Content="Gündem" Grid.Row="0" Grid.Column="1" Margin="0,2"/>
                        <CheckBox x:Name="CatSpor" Content="Spor" IsChecked="True" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                        <CheckBox x:Name="CatEkonomi" Content="Ekonomi" IsChecked="True" Grid.Row="1" Grid.Column="1" Margin="0,2"/>
                        <CheckBox x:Name="CatPolitika" Content="Politika" Grid.Row="2" Grid.Column="0" Margin="0,2"/>
                        <CheckBox x:Name="CatDunya" Content="Dünya" Grid.Row="2" Grid.Column="1" Margin="0,2"/>
                        <CheckBox x:Name="CatTeknoloji" Content="Teknoloji" Grid.Row="3" Grid.Column="0" Margin="0,2"/>
                        <CheckBox x:Name="CatSaglik" Content="Sağlık" Grid.Row="3" Grid.Column="1" Margin="0,2"/>
                        <CheckBox x:Name="CatKultur" Content="Kültür" Grid.Row="4" Grid.Column="0" Margin="0,2"/>
                        <CheckBox x:Name="CatMagazin" Content="Magazin" Grid.Row="4" Grid.Column="1" Margin="0,2"/>
                        <CheckBox x:Name="CatYasam" Content="Yaşam" Grid.Row="5" Grid.Column="0" Margin="0,2"/>
                    </Grid>
                    
                    <!-- Özel Kategori -->
                    <StackPanel Margin="0,12,0,0">
                        <TextBlock Text="12. Özel Kategori" 
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="CustomCategoryCombo" 
                                  Width="300"
                                  HorizontalAlignment="Left">
                            <ComboBoxItem Content="Otomobil" IsSelected="True"/>
                            <ComboBoxItem Content="Yerel Haberler"/>
                            <ComboBoxItem Content="Bilim"/>
                            <ComboBoxItem Content="Sanat"/>
                            <ComboBoxItem Content="Eğitim"/>
                            <ComboBoxItem Content="Turizm"/>
                            <ComboBoxItem Content="Hava Durumu"/>
                            <ComboBoxItem Content="Sinema"/>
                            <ComboBoxItem Content="Müzik"/>
                            <ComboBoxItem Content="Kitap"/>
                            <ComboBoxItem Content="Oyun"/>
                            <ComboBoxItem Content="Tarih"/>
                            <ComboBoxItem Content="Çevre"/>
                            <ComboBoxItem Content="Yemek"/>
                            <ComboBoxItem Content="Moda"/>
                            <ComboBoxItem Content="Emlak"/>
                            <ComboBoxItem Content="Hukuk"/>
                            <ComboBoxItem Content="Güvenlik"/>
                            <ComboBoxItem Content="Enerji"/>
                            <ComboBoxItem Content="Astroloji"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Haber Kaynakları Seçimi -->
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="Haber Kaynakları" 
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,8"/>
                        
                        <ToggleSwitch x:Name="ShowAllSourcesToggle" 
                                      Header="Tüm Kaynakları Göster"
                                      OffContent="Sadece Seçili Kaynaklar"
                                      OnContent="Tüm Kaynaklar"
                                      IsOn="True"
                                      Margin="0,0,0,8"/>
                        
                        <ToggleSwitch x:Name="AutoTranslateToggle" 
                                      Header="İngilizce Haberleri Otomatik Çevir"
                                      IsOn="True"
                                      Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Haber kaynaklarını seçin:" 
                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Haber Kaynakları Listesi -->
                        <ScrollViewer MaxHeight="200" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      BorderThickness="1"
                                      BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                      Padding="8">
                            <StackPanel x:Name="NewsSourcesPanel" Spacing="4">
                                <!-- Checkboxlar kod-behind'da dinamik olarak eklenecek -->
                            </StackPanel>
                        </ScrollViewer>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Spacing="8">
                            <Button x:Name="SelectAllSourcesButton" Content="Tümünü Seç" Click="SelectAllSources_Click"/>
                            <Button x:Name="DeselectAllSourcesButton" Content="Tümünü Kaldır" Click="DeselectAllSources_Click"/>
                            <Button x:Name="SelectTurkishSourcesButton" Content="Türkçe Kaynaklar" Click="SelectTurkishSources_Click"/>
                            <Button x:Name="SelectEnglishSourcesButton" Content="İngilizce Kaynaklar" Click="SelectEnglishSources_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Expander>

            <!-- Kullanıcı Profili -->
            <Expander Header="Kullanıcı Profili" 
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      IsExpanded="False">
                <StackPanel Spacing="12" Margin="0,12,0,0">
                    <!-- Ad ve Soyad -->
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="FirstNameTextBox" 
                                 Grid.Column="0"
                                 Header="Ad *"
                                 PlaceholderText="Adınız (zorunlu)"/>
                        
                        <TextBox x:Name="LastNameTextBox" 
                                 Grid.Column="1"
                                 Header="Soyad *"
                                 PlaceholderText="Soyadınız (zorunlu)"/>
                    </Grid>
                    
                    <!-- Email ve Telefon -->
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="EmailTextBox" 
                                 Grid.Column="0"
                                 Header="E-posta *"
                                 PlaceholderText="ornek@email.com (zorunlu)"
                                 InputScope="EmailSmtpAddress"/>
                        
                        <TextBox x:Name="PhoneTextBox" 
                                 Grid.Column="1"
                                 Header="Telefon"
                                 PlaceholderText="0555 123 4567"
                                 InputScope="TelephoneNumber"/>
                    </Grid>
                    
                    <!-- Doğum Tarihi ve Cinsiyet -->
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <DatePicker x:Name="BirthDatePicker" 
                                    Grid.Column="0"
                                    Header="Doğum Tarihi"/>
                        
                        <ComboBox x:Name="GenderComboBox" 
                                  Grid.Column="1"
                                  Header="Cinsiyet"
                                  Width="200"
                                  PlaceholderText="Seçiniz">
                            <ComboBoxItem Content="Erkek" Tag="Male"/>
                            <ComboBoxItem Content="Kadın" Tag="Female"/>
                            <ComboBoxItem Content="Diğer" Tag="Other"/>
                            <ComboBoxItem Content="Belirtmek istemiyorum" Tag="PreferNotToSay"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Ülke ve Şehir -->
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="CountryTextBox" 
                                 Grid.Column="0"
                                 Header="Ülke"
                                 PlaceholderText="Türkiye"
                                 Text="Türkiye"/>
                        
                        <TextBox x:Name="CityTextBox" 
                                 Grid.Column="1"
                                 Header="Şehir"
                                 PlaceholderText="İstanbul"/>
                    </Grid>
                    
                    <!-- Profil Fotoğrafı -->
                    <StackPanel>
                        <TextBlock Text="Profil Fotoğrafı" 
                                   Style="{ThemeResource BaseTextBlockStyle}"
                                   Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <PersonPicture x:Name="ProfilePicture" 
                                           Grid.Column="0"
                                           Width="64"
                                           Height="64"
                                           Margin="0,0,12,0"/>
                            
                            <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                                <Button x:Name="SelectPhotoButton" 
                                        Content="Fotoğraf Seç" 
                                        Click="SelectPhoto_Click"/>
                                <Button x:Name="RemovePhotoButton" 
                                        Content="Fotoğrafı Kaldır" 
                                        Click="RemovePhoto_Click"
                                        IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Sosyal Medya Hesapları -->
                    <Expander Header="Sosyal Medya Hesapları" 
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Left">
                        <StackPanel Spacing="8" Margin="0,8,0,0">
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Twitter:" VerticalAlignment="Center"/>
                                <TextBox x:Name="TwitterTextBox" Grid.Column="1" PlaceholderText="@kullaniciadi"/>
                            </Grid>
                            
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="LinkedIn:" VerticalAlignment="Center"/>
                                <TextBox x:Name="LinkedInTextBox" Grid.Column="1" PlaceholderText="linkedin.com/in/kullaniciadi"/>
                            </Grid>
                            
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Instagram:" VerticalAlignment="Center"/>
                                <TextBox x:Name="InstagramTextBox" Grid.Column="1" PlaceholderText="@kullaniciadi"/>
                            </Grid>
                            
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="GitHub:" VerticalAlignment="Center"/>
                                <TextBox x:Name="GitHubTextBox" Grid.Column="1" PlaceholderText="github.com/kullaniciadi"/>
                            </Grid>
                        </StackPanel>
                    </Expander>
                    
                    <!-- GDPR Onay -->
                    <CheckBox x:Name="GdprConsentCheckBox" Margin="0,8,0,0">
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="Kişisel verilerimin güvenli bir şekilde saklanmasını ve "/>
                            <Run Text="GDPR uyumlu olarak işlenmesini kabul ediyorum."/>
                        </TextBlock>
                    </CheckBox>
                    
                    <!-- Profil Yönetimi Butonları -->
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                        <Button x:Name="DeleteProfileButton" 
                                Content="Profili Sil" 
                                Click="DeleteProfile_Click"
                                Style="{ThemeResource AccentButtonStyle}">
                            <Button.Background>
                                <SolidColorBrush Color="#D13438"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="(Tüm profil verileri silinecektir)" 
                                   VerticalAlignment="Center"
                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    
                    <TextBlock Text="* ile işaretli alanlar zorunludur" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Expander>

            <!-- Gelişmiş ayarlar -->
            <Expander Header="Gelişmiş Ayarlar" 
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left">
                <StackPanel Spacing="12" Margin="0,12,0,0">
                    <Slider x:Name="BlurIntensitySlider"
                            Header="Widget Bulanıklık Efekti"
                            Minimum="0"
                            Maximum="40"
                            Value="20"
                            StepFrequency="5"
                            TickFrequency="10"
                            TickPlacement="BottomRight"/>
                    
                    <TextBlock Text="Widget'ların arka plan bulanıklık efektini ayarlar" 
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,0,0,8"/>
                </StackPanel>
            </Expander>

            <!-- Durum bilgisi -->
            <Border Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="Sistem Bilgisi" 
                               Style="{ThemeResource BaseTextBlockStyle}"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="SystemInfoText"
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>